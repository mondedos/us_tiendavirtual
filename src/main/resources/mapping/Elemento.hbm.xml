<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<!--model.person.Elemento root -->
	<class name="model.person.Elemento" table="elemento">
		 <id name="id" type="long" column="id">
			<generator class="increment"/>
		</id>
	    <property name="perioricidad" column="perioricidad" type="int"/>
	    <property name="fechaRevision" column="fechaRevision" type="date"/>
	    
            <!-- Subclase Elemento complejo --> 
	    <joined-subclass name="model.person.ElementoComplejo" table="elementoComplejo">
	    <key column="id"/>
	    <property name="serie" column="serie" type="string"/>
	    <property name="marca" column="marca" type="string"/>
	    <property name="modelo" column="modelo" type="string"/>
            </joined-subclass>	

		  <!-- Subclase Elemento instalacon mecanica --> 
	    <joined-subclass name="model.person.ElementoInstalacionMecanica" table="elementoInstalacionMecanica">
	    <key column="id"/>
	    <property name="material" column="material" type="string"/>
	    <property name="impulsion" column="impulsion" type="boolean"/>
	    <property name="aspiracion" column="aspiracion" type="boolean"/>
	     <property name="polietilenoTanque" column="polietilenoTanque" type="boolean"/>
	    <property name="polietilenoSurtidor" column="polietilenoSurtidor" type="boolean"/>
            </joined-subclass>	

	    <!-- Subclase Elemento surtidor --> 
	    
	    <joined-subclass name="model.person.ElementoSurtidor" table="elementoSurtidor">
	    <key column="id"/>
	    <property name="a_s" column="a_s" type="string"/>
	    <property name="numeroFabricacion" column="numeroFabricacion" type="string"/>
	    <property name="serie" column="serie" type="string"/>
	    <property name="marca" column="marca" type="string"/>
	    <property name="modelo" column="modelo" type="string"/>
	    <property name="producto" column="producto" type="string"/>
	    <property name="mangueras" column="mangueras" type="int"/>
	    <property name="fechaInstalacion" column="fechaInstalacion" type="date"/>
	    <property name="fechaPuestaEnMarcha" column="fechaPuestaEnMarcha" type="date"/>
            </joined-subclass>
            
	     <!-- Subclase Elemento Tanque --> 
	    <joined-subclass name="model.person.ElementoTanque" table="elementoTanque">
	    <key column="id"/>
	    <property name="numeroFabricacion" column="numeroFabricacion" type="string"/>
	    <property name="fabricante" column="fabricante" type="string"/>
	    <property name="modelo" column="modelo" type="string"/>
	     <property name="capacidad" column="capacidad" type="string"/>
	    <property name="combustible" column="combustible" type="string"/>
	    <property name="fechaInstalacion" column="fechaInstalacion" type="date"/>
	    <property name="pared" column="pared" type="string"/>
        </joined-subclass>
	   
            	
	</class>
</hibernate-mapping>