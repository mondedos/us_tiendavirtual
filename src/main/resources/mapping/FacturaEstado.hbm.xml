<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="model.factura.FacturaEstado" table="facturaestado">
		 <id name="id" type="long" column="id">
			<generator class="increment"/>
		 </id>
	     <property name="nombre" type="string"/> 
	      <!-- Subclase Proveedo --> 
	    <joined-subclass name="model.factura.FacturaCobradaEstado" table="facturaCobradaEstado">
	    <key column="id"/>
            </joined-subclass>	
             <!-- Subclase Proveedo --> 
	    <joined-subclass name="model.factura.FacturaPendienteEstado" table="facturaPendienteEstado">
	    <key column="id"/>
            </joined-subclass>	
	           
</class>
</hibernate-mapping>
