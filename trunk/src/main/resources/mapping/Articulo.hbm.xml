<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="model.Articulo" table="articulo">
		 <id name="id" type="long" column="id">
			<generator class="increment"/>
		</id>
		<property name="nombre" column="nombre" type="string"/>
	    <property name="codigo" column="codigo" type="string"/>
	     <property name="eliminado" column="eliminado" type="boolean"/>
	   <property name="descripcion" column="descripcion" type="string"/>
	   <property name="precioNeto" column="precioNeto" type="java.math.BigDecimal" length="10" precision="8" scale="3"/>
	   <property name="pvp" column="pvp" type="java.math.BigDecimal" length="10" precision="8" scale="3"/>
	   <property name="unidades" column="unidades" type="int"/>
		 <many-to-one name="proveedor" column="proveedor" class="model.person.Proveedor" lazy="false" cascade="all"/>
	</class>

</hibernate-mapping>
