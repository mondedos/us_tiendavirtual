<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="model.factura.DetalleFactura" table="detallefactura">
		<id name="detallefactura_id" type="long" column="detallefactura_id">
			<generator class="increment" />
		</id>
		<property name="nombre" type="string" />
		<property name="fecha" type="date" />
		<property name="importe" type="java.math.BigDecimal" length="10" precision="8" scale="3" />
		<property name="iva" type="java.math.BigDecimal" length="10" precision="8" scale="3"  />
		<property name="total" type="java.math.BigDecimal"  length="10" precision="8" scale="3" />

	</class>
</hibernate-mapping>