<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<!--model.person.Persona root -->
	<class name="model.Alarma" table="alarma">
		 <id name="id" type="long" column="id">
			<generator class="increment"/>
		</id>
	    <property name="fechaActivacion" column="fechaActivacion" type="date"  />
	    <property name="fechaCaducidad" column="fechaCaducidad" type="date"/>
            <property name="tipo" column="tipo" type="string"/>
            <property name="descripcion" column="descripcion" type="string"/>
            <property name="estado" column="estado" type="string"/>
            <many-to-one name="parte" class="model.parte.Parte"  lazy="false"/>         
	</class>
</hibernate-mapping>



