<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="model.factura.Factura" table="factura">
		 <id name="id" type="long" column="id">
			<generator class="increment"/>
		</id>
	        <property name="codigo" type="string"/>
            <property name="fecha" column="fecha" type="date"/>
            <property name="idExpediente"  type="string"/>
  			<many-to-one name="cliente" column="cliente" class="model.person.Cliente" lazy="false"/>     
 			<many-to-one name="estado" column="estado" cascade="all" class="model.factura.FacturaEstado" lazy="false"/>  
 			<set name="detalles" lazy="false" cascade="all" order-by="detallefactura_id"> 
 				<key column="factura_id"/>
 				<one-to-many class="model.factura.DetalleFactura"/>
 			</set> 
</class>
</hibernate-mapping>