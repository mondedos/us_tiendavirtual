<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<!--model.Usuario root -->
	<class name="model.person.Usuario" table="usuario">
		 <id name="id" type="long" column="id">
			<generator class="increment"/>
		</id>
	    <property name="nombre" column="nombre" type="string"/>
	    <property name="password" column="password" type="string"/>
	    <many-to-one name="accesoUsuario" column="AccesoUsuario" 	    class="model.person.AccesoUsuario" lazy="false" cascade="all"/>
            <many-to-one name="persona" column="persona_id" 	    	            class="model.person.Persona" lazy="false" cascade="all"/>	   
	</class>
</hibernate-mapping>